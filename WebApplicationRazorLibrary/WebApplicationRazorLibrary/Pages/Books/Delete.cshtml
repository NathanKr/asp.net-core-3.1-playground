@page "{id}"
@model WebApplicationRazorLibrary.Pages.Books.DeleteModel
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Confirmation</h1>

<div class="alert alert-danger">
    <h5>Are you sure you want to delete this book</h5>
    <partial name="_BookDetailsPartial" model="@Model.Book" />

    <form method="post" class="mt-3">
        <input type="submit" value="Yes" class="btn btn-danger" />
        <a class="btn btn-primary" asp-page="/Books/Index">No</a>
    </form>
</div>



